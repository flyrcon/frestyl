                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                      </svg>
                    </div>
                    <div class="text-left">
                      <div class="font-black text-gray-900 text-sm">Start Session</div>
                      <div class="text-xs text-gray-500 font-semibold">Begin collaborating</div>
                    </div>
                  </button>
                <% end %>
                
                <%= if @can_create_broadcast do %>
                  <button phx-click="show_broadcast_form" class="w-full flex items-center gap-4 p-4 bg-gradient-to-r from-purple-50/80 to-pink-50/80 hover:from-purple-100/80 hover:to-pink-100/80 rounded-2xl transition-all duration-300 hover:shadow-lg border border-purple-200/50">
                    <div class="w-10 h-10 bg-gradient-to-br from-[#8B5CF6] to-[#FF0080] rounded-xl flex items-center justify-center shadow-lg border border-white/20">
                      <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                      </svg>
                    </div>
                    <div class="text-left">
                      <div class="font-black text-gray-900 text-sm">Go Live</div>
                      <div class="text-xs text-gray-500 font-semibold">Start broadcasting</div>
                    </div>
                  </button>
                <% end %>
                
                <button phx-click="show_media_upload" class="w-full flex items-center gap-4 p-4 bg-gradient-to-r from-blue-50/80 to-indigo-50/80 hover:from-blue-100/80 hover:to-indigo-100/80 rounded-2xl transition-all duration-300 hover:shadow-lg border border-blue-200/50">
                  <div class="w-10 h-10 bg-gradient-to-br from-[#00D4FF] to-[#8B5CF6] rounded-xl flex items-center justify-center shadow-lg border border-white/20">
                    <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                    </svg>
                  </div>
                  <div class="text-left">
                    <div class="font-black text-gray-900 text-sm">Upload Content</div>
                    <div class="text-xs text-gray-500 font-semibold">Share files</div>
                  </div>
                </button>
              </div>
            </div>
          <% end %>
        </aside>
      </div>
    </div>
  <% end %>
</div>

<%!-- Restricted Access View --%>
<%= if @restricted do %>
  <div class="min-h-screen bg-gray-50 flex items-center justify-center">
    <div class="max-w-md w-full bg-white/95 backdrop-blur-xl rounded-2xl shadow-2xl p-10 text-center border border-white/20 mx-4">
      <div class="w-20 h-20 mx-auto bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl flex items-center justify-center mb-8 shadow-lg border border-gray-200/50">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
        </svg>
      </div>
      
      <h2 class="text-3xl font-black text-gray-900 mb-4 tracking-tight">Channel Restricted</h2>
      <p class="text-gray-600 mb-8 leading-relaxed font-semibold">
        This channel is private and requires membership to view its content.
      </p>
      
      <%= unless @current_user do %>
        <.link navigate={~p"/auth/login"} class="relative overflow-hidden w-full block bg-gradient-to-r from-[#8B5CF6] to-[#FF0080] hover:from-[#7C3AED] hover:to-[#E60067] text-white font-black px-8 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-purple-500/30 mb-6">
          Sign In to Request Access
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
        </.link>
      <% else %>
        <button phx-click="request_access" class="relative overflow-hidden w-full bg-gradient-to-r from-[#8B5CF6] to-[#FF0080] hover:from-[#7C3AED] hover:to-[#E60067] text-white font-black px-8 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-purple-500/30 mb-6">
          Request Access
          <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
        </button>
      <% end %>
      
      <.link navigate={~p"/dashboard"} class="text-sm text-gray-500 hover:text-gray-700 font-semibold transition-colors">
        Back to Dashboard
      </.link>
    </div>
  </div>
<% end %>

<%!-- Modals and Forms with enhanced Frestyl styling --%>

<%!-- Session Form Modal --%>
<%= if @show_session_form do %>
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-xl rounded-2xl max-w-md w-full p-8 shadow-2xl border border-white/20">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-black text-gray-900 tracking-tight">Start New Session</h3>
        <button phx-click="hide_session_form" class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <.form for={@session_changeset} phx-submit="create_session">
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Session Title</label>
            <input type="text" name="session[title]" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#F59E0B]/50 focus:outline-none transition-all duration-200 font-semibold" placeholder="Enter session title" required>
          </div>
          
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Description</label>
            <textarea name="session[description]" rows="4" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#F59E0B]/50 focus:outline-none transition-all duration-200 font-semibold resize-none" placeholder="What will you be working on?"></textarea>
          </div>
          
          <div class="flex items-center gap-3">
            <input type="checkbox" name="session[is_public]" id="session_public" class="rounded-lg border-gray-300 text-[#F59E0B] focus:ring-[#F59E0B]/50">
            <label for="session_public" class="text-sm font-bold text-gray-700">Public session (visible to all members)</label>
          </div>
        </div>
        
        <div class="flex gap-4 mt-8">
          <button type="button" phx-click="hide_session_form" class="flex-1 px-6 py-4 border-2 border-gray-300 text-gray-700 font-black rounded-2xl hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
            Cancel
          </button>
          <button type="submit" class="relative overflow-hidden flex-1 bg-gradient-to-r from-[#F59E0B] to-[#EF4444] hover:from-[#E5A208] hover:to-[#DC2626] text-white font-black px-6 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-orange-500/30">
            Start Session
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
          </button>
        </div>
      </.form>
    </div>
  </div>
<% end %>

<%!-- Broadcast Form Modal --%>
<%= if @show_broadcast_form do %>
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-xl rounded-2xl max-w-md w-full p-8 shadow-2xl border border-white/20">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-black text-gray-900 tracking-tight">Schedule Broadcast</h3>
        <button phx-click="hide_broadcast_form" class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <.form for={@broadcast_changeset} phx-submit="schedule_broadcast">
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Broadcast Title</label>
            <input type="text" name="broadcast[title]" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#8B5CF6]/50 focus:outline-none transition-all duration-200 font-semibold" placeholder="Enter broadcast title" required>
          </div>
          
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Description</label>
            <textarea name="broadcast[description]" rows="4" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#8B5CF6]/50 focus:outline-none transition-all duration-200 font-semibold resize-none" placeholder="What will you be broadcasting?"></textarea>
          </div>
          
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Scheduled For</label>
            <input type="datetime-local" name="broadcast[scheduled_for]" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#8B5CF6]/50 focus:outline-none transition-all duration-200 font-semibold" required>
          </div>
          
          <div class="space-y-4">
            <div class="flex items-center gap-3">
              <input type="checkbox" name="broadcast[is_public]" id="broadcast_public" class="rounded-lg border-gray-300 text-[#8B5CF6] focus:ring-[#8B5CF6]/50">
              <label for="broadcast_public" class="text-sm font-bold text-gray-700">Public broadcast (visible to all members)</label>
            </div>
            
            <div class="flex items-center gap-3">
              <input type="checkbox" name="broadcast[waiting_room_enabled]" id="waiting_room" class="rounded-lg border-gray-300 text-[#8B5CF6] focus:ring-[#8B5CF6]/50">
              <label for="waiting_room" class="text-sm font-bold text-gray-700">Enable waiting room</label>
            </div>
          </div>
        </div>
        
        <div class="flex gap-4 mt-8">
          <button type="button" phx-click="hide_broadcast_form" class="flex-1 px-6 py-4 border-2 border-gray-300 text-gray-700 font-black rounded-2xl hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
            Cancel
          </button>
          <button type="submit" class="relative overflow-hidden flex-1 bg-gradient-to-r from-[#8B5CF6] to-[#FF0080] hover:from-[#7C3AED] hover:to-[#E60067] text-white font-black px-6 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-purple-500/30">
            Schedule
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
          </button>
        </div>
      </.form>
    </div>
  </div>
<% end %>

<%!-- Media Upload Modal --%>
<%= if @show_media_upload do %>
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-xl rounded-2xl max-w-md w-full p-8 shadow-2xl border border-white/20">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-black text-gray-900 tracking-tight">Upload Files</h3>
        <button phx-click="hide_media_upload" class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <form phx-submit="save_uploads" phx-change="validate_uploads">
        <div class="space-y-6">
          <div class="border-2 border-dashed border-gray-300 rounded-2xl p-10 text-center hover:border-[#8B5CF6] hover:bg-purple-50/30 transition-all duration-300">
            <svg class="w-16 h-16 mx-auto text-gray-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
            </svg>
            <div phx-drop-target={@uploads.media_files.ref}>
              <label for={@uploads.media_files.ref} class="cursor-pointer">
                <p class="text-gray-600 font-black text-lg mb-2">Drop files here or click to browse</p>
                <p class="text-sm text-gray-500 font-semibold">Supports images, videos, audio, and documents</p>
              </label>
              <.live_file_input upload={@uploads.media_files} class="hidden" />
            </div>
          </div>
          
          <%!-- Upload Progress --%>
          <%= for entry <- @uploads.media_files.entries do %>
            <div class="bg-gray-50/80 backdrop-blur-xl rounded-2xl p-4 border border-gray-200/50">
              <div class="flex items-center justify-between mb-3">
                <span class="text-sm font-black text-gray-900 truncate"><%= entry.client_name %></span>
                <button type="button" phx-click="cancel-upload" phx-value-ref={entry.ref} class="text-[#FF0080] hover:text-[#E60067] transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </button>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div class="bg-gradient-to-r from-[#00D4FF] to-[#8B5CF6] h-3 rounded-full transition-all duration-300" style={"width: #{entry.progress}%"}></div>
              </div>
              <%= for err <- upload_errors(@uploads.media_files, entry) do %>
                <p class="text-[#FF0080] text-xs mt-2 font-semibold"><%= error_to_string(err) %></p>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <div class="flex gap-4 mt-8">
          <button type="button" phx-click="hide_media_upload" class="flex-1 px-6 py-4 border-2 border-gray-300 text-gray-700 font-black rounded-2xl hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
            Cancel
          </button>
          <button type="submit" class="relative overflow-hidden flex-1 bg-gradient-to-r from-[#00D4FF] to-[#8B5CF6] hover:from-[#0099CC] hover:to-[#7C3AED] text-white font-black px-6 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-blue-500/30" disabled={length(@uploads.media_files.entries) == 0}>
            Upload Files
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
          </button>
        </div>
      </form>
    </div>
  </div>
<% end %>

<%!-- Invite Modal --%>
<%= if @show_invite_modal do %>
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-xl rounded-2xl max-w-md w-full p-8 shadow-2xl border border-white/20">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-black text-gray-900 tracking-tight">Invite Members</h3>
        <button phx-click="hide_invite_modal" class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <form phx-submit="invite_to_channel">
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Email Address</label>
            <input type="email" name="email" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#10B981]/50 focus:outline-none transition-all duration-200 font-semibold" placeholder="Enter email address" required>
          </div>
          
          <p class="text-sm text-gray-600 font-semibold leading-relaxed">
            The invited user will receive an email with instructions to join this channel.
          </p>
        </div>
        
        <div class="flex gap-4 mt-8">
          <button type="button" phx-click="hide_invite_modal" class="flex-1 px-6 py-4 border-2 border-gray-300 text-gray-700 font-black rounded-2xl hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
            Cancel
          </button>
          <button type="submit" class="relative overflow-hidden flex-1 bg-gradient-to-r from-[#10B981] to-[#059669] hover:from-[#0D9488] hover:to-[#047857] text-white font-black px-6 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-green-500/30">
            Send Invite
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
          </button>
        </div>
      </form>
    </div>
  </div>
<% end %>

<%!-- Block User Modal --%>
<%= if @show_block_modal do %>
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-xl rounded-2xl max-w-md w-full p-8 shadow-2xl border border-white/20">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-black text-gray-900 tracking-tight">Block User</h3>
        <button phx-click="hide_block_modal" class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <form phx-submit="block_email">
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Email Address</label>
            <input type="email" name="email" value={@user_to_block && get_user_email(@user_to_block)} class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#FF0080]/50 focus:outline-none transition-all duration-200 font-semibold" placeholder="Enter email address" required>
          </div>
          
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Reason</label>
            <textarea name="reason" rows="4" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#FF0080]/50 focus:outline-none transition-all duration-200 font-semibold resize-none" placeholder="Reason for blocking..." required></textarea>
          </div>
          
          <div>
            <label class="block text-sm font-black text-gray-700 mb-3">Duration</label>
            <select name="duration" class="w-full px-4 py-4 border-0 bg-gray-50 rounded-2xl focus:bg-white focus:ring-2 focus:ring-[#FF0080]/50 focus:outline-none transition-all duration-200 font-semibold">
              <option value="1d">1 Day</option>
              <option value="7d">7 Days</option>
              <option value="30d">30 Days</option>
              <option value="90d">90 Days</option>
              <option value="permanent">Permanent</option>
            </select>
          </div>
        </div>
        
        <div class="flex gap-4 mt-8">
          <button type="button" phx-click="hide_block_modal" class="flex-1 px-6 py-4 border-2 border-gray-300 text-gray-700 font-black rounded-2xl hover:bg-gray-50 hover:border-gray-400 transition-all duration-300">
            Cancel
          </button>
          <button type="submit" class="relative overflow-hidden flex-1 bg-gradient-to-r from-[#FF0080] to-[#DC2626] hover:from-[#E60067] hover:to-[#B91C1C] text-white font-black px-6 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-red-500/30">
            Block User
            <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
          </button>
        </div>
      </form>
    </div>
  </div>
<% end %>

<%!-- Options Panel --%>
<%= if @show_options_panel do %>
  <div class="fixed inset-0 bg-black/50 backdrop-blur-sm z-50 flex items-center justify-center p-4">
    <div class="bg-white/95 backdrop-blur-xl rounded-2xl max-w-md w-full p-8 shadow-2xl border border-white/20">
      <div class="flex items-center justify-between mb-8">
        <h3 class="text-2xl font-black text-gray-900 tracking-tight">Channel Options</h3>
        <button phx-click="toggle_options" class="text-gray-400 hover:text-gray-600 p-1 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
          </svg>
        </button>
      </div>
      
      <div class="space-y-4">
        <.link navigate={~p"/channels/#{@channel.slug}/edit"} class="w-full flex items-center gap-4 p-4 bg-gradient-to-r from-blue-50/80 to-indigo-50/80 hover:from-blue-100/80 hover:to-indigo-100/80 rounded-2xl transition-all duration-300 hover:shadow-lg border border-blue-200/50">
          <div class="w-10 h-10 bg-gradient-to-br from-[#00D4FF] to-[#8B5CF6] rounded-xl flex items-center justify-center shadow-lg border border-white/20">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
          </div>
          <div class="text-left">
            <div class="font-black text-gray-900 text-sm">Edit Channel</div>
            <div class="text-xs text-gray-500 font-semibold">Update settings</div>
          </div>
        </.link>
        
        <button phx-click="show_invite_modal" class="w-full flex items-center gap-4 p-4 bg-gradient-to-r from-green-50/80 to-emerald-50/80 hover:from-green-100/80 hover:to-emerald-100/80 rounded-2xl transition-all duration-300 hover:shadow-lg border border-green-200/50">
          <div class="w-10 h-10 bg-gradient-to-br from-[#10B981] to-[#059669] rounded-xl flex items-center justify-center shadow-lg border border-white/20">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"/>
            </svg>
          </div>
          <div class="text-left">
            <div class="font-black text-gray-900 text-sm">Invite Members</div>
            <div class="text-xs text-gray-500 font-semibold">Add collaborators</div>
          </div>
        </button>
        
        <button phx-click="show_block_modal" class="w-full flex items-center gap-4 p-4 bg-gradient-to-r from-red-50/80 to-pink-50/80 hover:from-red-100/80 hover:to-pink-100/80 rounded-2xl transition-all duration-300 hover:shadow-lg border border-red-200/50">
          <div class="w-10 h-10 bg-gradient-to-br from-[#FF0080] to-[#DC2626] rounded-xl flex items-center justify-center shadow-lg border border-white/20">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636m12.728 12.728L18.364 5.636M5.636 18.364l12.728-12.728"/>
            </svg>
          </div>
          <div class="text-left">
            <div class="font-black text-gray-900 text-sm">Block User</div>
            <div class="text-xs text-gray-500 font-semibold">Restrict access</div>
          </div>
        </button>
        
        <%= if @is_member and @user_role != "owner" do %>
          <button phx-click="leave_channel" class="w-full flex items-center gap-4 p-4 bg-gradient-to-r from-gray-50/80 to-gray-100/80 hover:from-gray-100/80 hover:to-gray-200/80 rounded-2xl transition-all duration-300 hover:shadow-lg border border-gray-200/50">
            <div class="w-10 h-10 bg-gradient-to-br from-gray-500 to-gray-600 rounded-xl flex items-center justify-center shadow-lg border border-white/20">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            </div>
            <div class="text-left">
              <div class="font-black text-gray-900 text-sm">Leave Channel</div>
              <div class="text-xs text-gray-500 font-semibold">Exit this channel</div>
            </div>
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% end %>