<%!-- Enhanced Channel Show Template with Frestyl Branding - Part 1 --%>
<.nav current_user={@current_user} active_tab={:null} />

<%!-- Main Container with Frestyl styling --%>
<div class="min-h-screen bg-gray-50 pt-16">
  <%!-- Hero Section with enhanced Frestyl styling --%>
  <section class="relative overflow-hidden bg-white shadow-sm">
    <%!-- Background Pattern similar to dashboard --%>
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0 bg-gradient-to-br from-[#00D4FF] via-[#8B5CF6] to-[#FF0080]"></div>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col lg:flex-row items-start lg:items-center gap-6">
        <%!-- Channel Info --%>
        <div class="flex items-center gap-6 flex-1">
          <%!-- Channel Avatar with Frestyl styling --%>
          <div class="relative">
            <div class="w-20 h-20 lg:w-24 lg:h-24 rounded-2xl overflow-hidden shadow-xl ring-4 ring-white/30 backdrop-blur-xl border border-white/20">
              <%= if @channel.icon_url do %>
                <img src={@channel.icon_url} alt={@channel.name} class="w-full h-full object-cover"/>
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-[#8B5CF6] to-[#00D4FF] flex items-center justify-center">
                  <span class="text-white font-black text-xl lg:text-3xl">
                    <%= String.first(@channel.name) %>
                  </span>
                </div>
              <% end %>
            </div>
            <%!-- Live Activity Indicator --%>
            <%= if @live_activities_count > 0 do %>
              <div class="absolute -bottom-1 -right-1 w-7 h-7 bg-gradient-to-r from-[#FF0080] to-[#FF4500] rounded-full flex items-center justify-center shadow-xl animate-pulse border-2 border-white">
                <span class="text-white text-xs font-black"><%= @live_activities_count %></span>
              </div>
            <% end %>
          </div>
          
          <div class="flex-1">
            <h1 class="text-3xl lg:text-4xl font-black text-gray-900 mb-3 tracking-tight"><%= @channel.name %></h1>
            <%= if @channel.description do %>
              <p class="text-gray-600 mb-4 max-w-md leading-relaxed"><%= @channel.description %></p>
            <% end %>
            
            <%!-- Channel Stats --%>
            <div class="flex items-center gap-6 text-sm">
              <div class="flex items-center gap-2">
                <div class="w-2.5 h-2.5 bg-[#00D4FF] rounded-full animate-pulse shadow-lg shadow-[#00D4FF]/50"></div>
                <span class="font-black text-gray-900"><%= @member_count %> members</span>
              </div>
              <%= if @channel.category do %>
                <div class="flex items-center gap-2">
                  <div class="w-2.5 h-2.5 bg-[#8B5CF6] rounded-full shadow-lg shadow-[#8B5CF6]/50"></div>
                  <span class="text-gray-600 capitalize font-semibold"><%= @channel.category %></span>
                </div>
              <% end %>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-[#FF0080]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                </svg>
                <span class="text-gray-600 font-semibold"><%= @total_sessions %> sessions</span>
              </div>
            </div>
          </div>
        </div>
        
        <%!-- Action Buttons --%>
        <div class="flex flex-wrap gap-3">
          <%= if @is_member do %>
            <%= if @can_create_session do %>
              <button phx-click="show_session_form" class="relative overflow-hidden bg-gradient-to-r from-[#00D4FF] to-[#8B5CF6] hover:from-[#0099CC] hover:to-[#7C3AED] text-white px-6 py-3 rounded-2xl font-black text-sm uppercase tracking-wide transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-[#00D4FF]/30">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                  </svg>
                  New Session
                </div>
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
              </button>
            <% end %>
            
            <%= if @can_create_broadcast do %>
              <button phx-click="show_broadcast_form" class="relative overflow-hidden bg-gradient-to-r from-[#8B5CF6] to-[#FF0080] hover:from-[#7C3AED] hover:to-[#E60067] text-white px-6 py-3 rounded-2xl font-black text-sm uppercase tracking-wide transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-[#8B5CF6]/30">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                  Go Live
                </div>
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
              </button>
            <% end %>
          <% else %>
            <%= unless @restricted do %>
              <button phx-click="join_channel" class="relative overflow-hidden bg-gradient-to-r from-[#10B981] to-[#059669] hover:from-[#0D9488] hover:to-[#047857] text-white px-6 py-3 rounded-2xl font-black text-sm uppercase tracking-wide transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-[#10B981]/30">
                Join Channel
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
              </button>
            <% else %>
              <button phx-click="request_access" class="relative overflow-hidden bg-gradient-to-r from-[#F59E0B] to-[#D97706] hover:from-[#E5A208] hover:to-[#C7750B] text-white px-6 py-3 rounded-2xl font-black text-sm uppercase tracking-wide transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-[#F59E0B]/30">
                Request Access
                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
              </button>
            <% end %>
          <% end %>
          
          <%!-- Options Menu --%>
          <%= if @can_edit do %>
            <button phx-click="toggle_options" class="px-4 py-3 bg-white/20 backdrop-blur-xl text-gray-700 font-black rounded-2xl hover:bg-white/30 hover:shadow-lg transition-all duration-300 border border-white/20">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
              </svg>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%!-- Only show main content if not restricted --%>
  <%= unless @restricted do %>
    <%!-- Main Content Area --%>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="grid grid-cols-1 xl:grid-cols-12 gap-8">
        
        <%!-- Main Content Column --%>
        <main class="xl:col-span-8 space-y-6">
          <%!-- Tab Navigation --%>
          <div class="bg-white/95 backdrop-blur-xl rounded-2xl shadow-xl overflow-hidden border border-white/20">
            <div class="border-b border-gray-100">
              <nav class="flex space-x-8 px-6">
                <button 
                  phx-click="switch_tab" 
                  phx-value-tab="activity"
                  class={"py-4 px-1 border-b-3 font-black text-sm transition-all duration-300 #{if @active_tab == "activity", do: "border-[#00D4FF] text-[#00D4FF] shadow-lg shadow-[#00D4FF]/10", else: "border-transparent text-gray-500 hover:text-[#8B5CF6] hover:border-[#8B5CF6]/30"}"}
                >
                  Live Activity
                </button>
                <button 
                  phx-click="switch_tab" 
                  phx-value-tab="content"
                  class={"py-4 px-1 border-b-3 font-black text-sm transition-all duration-300 #{if @active_tab == "content", do: "border-[#8B5CF6] text-[#8B5CF6] shadow-lg shadow-[#8B5CF6]/10", else: "border-transparent text-gray-500 hover:text-[#00D4FF] hover:border-[#00D4FF]/30"}"}
                >
                  Content Library
                </button>
                <button 
                  phx-click="switch_tab" 
                  phx-value-tab="members"
                  class={"py-4 px-1 border-b-3 font-black text-sm transition-all duration-300 #{if @active_tab == "members", do: "border-[#FF0080] text-[#FF0080] shadow-lg shadow-[#FF0080]/10", else: "border-transparent text-gray-500 hover:text-[#FF0080] hover:border-[#FF0080]/30"}"}
                >
                  Members
                </button>
              </nav>
            </div>

            <%!-- Tab Content --%>
            <div class="p-6">
              <%= if @active_tab == "activity" do %>
                <%!-- Live Activity Tab --%>
                <div class="space-y-6">
                  <%!-- Activity Sub-tabs --%>
                  <div class="flex items-center gap-4 mb-6">
                    <button 
                      phx-click="switch_activity_tab" 
                      phx-value-tab="happening_now"
                      class={"px-6 py-3 rounded-2xl font-black text-sm transition-all duration-300 #{if @activity_tab == "happening_now", do: "bg-gradient-to-r from-[#FF0080] to-[#FF4500] text-white shadow-xl shadow-[#FF0080]/30", else: "bg-gray-100 text-gray-600 hover:bg-gray-200 hover:shadow-lg"}"}
                    >
                      <div class="flex items-center gap-2">
                        <div class="w-2.5 h-2.5 bg-white rounded-full animate-pulse"></div>
                        Happening Now
                      </div>
                    </button>
                    <button 
                      phx-click="switch_activity_tab" 
                      phx-value-tab="upcoming"
                      class={"px-6 py-3 rounded-2xl font-black text-sm transition-all duration-300 #{if @activity_tab == "upcoming", do: "bg-gradient-to-r from-[#00D4FF] to-[#8B5CF6] text-white shadow-xl shadow-[#00D4FF]/30", else: "bg-gray-100 text-gray-600 hover:bg-gray-200 hover:shadow-lg"}"}
                    >
                      Upcoming Events
                    </button>
                  </div>

                  <%= if @activity_tab == "happening_now" do %>
                    <%!-- Active Sessions & Broadcasts --%>
                    <%= if has_active_sessions?(@sessions) or has_active_broadcasts?(@broadcasts) do %>
                      <div class="space-y-4">
                        <%!-- Active Sessions --%>
                        <%= for session <- active_sessions(@sessions) do %>
                          <div class="bg-gradient-to-r from-orange-50/80 to-red-50/80 backdrop-blur-xl border border-orange-200/50 rounded-2xl p-6 hover:shadow-2xl hover:shadow-orange-500/10 transition-all duration-500 transform hover:scale-[1.02]">
                            <div class="flex items-start justify-between">
                              <div class="flex items-start gap-4 flex-1">
                                <div class="w-16 h-16 bg-gradient-to-br from-[#F59E0B] to-[#EF4444] rounded-2xl flex items-center justify-center shadow-xl border border-white/20 backdrop-blur-xl">
                                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                                  </svg>
                                </div>
                                <div class="flex-1">
                                  <div class="flex items-center gap-3 mb-3">
                                    <h3 class="font-black text-gray-900 text-xl tracking-tight"><%= session.title || "Creative Session" %></h3>
                                    <span class="bg-gradient-to-r from-[#FF0080] to-[#FF4500] text-white px-3 py-1 text-xs rounded-full font-black animate-pulse shadow-lg">LIVE</span>
                                  </div>
                                  <%= if session.description do %>
                                    <p class="text-gray-600 mb-4 leading-relaxed"><%= session.description %></p>
                                  <% end %>
                                  <div class="flex items-center gap-4 text-sm">
                                    <div class="flex items-center gap-2">
                                      <svg class="w-4 h-4 text-[#F59E0B]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.196-2.121M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 515.196-2.121M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 919.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                      </svg>
                                      <span class="font-black text-orange-600"><%= session.participants_count || 0 %> participants</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                      </svg>
                                      <span class="text-gray-600 font-semibold">Started <%= time_ago(session.started_at) %></span>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="flex flex-col gap-2">
                                <button phx-click="join_session" phx-value-id={session.id} class="relative overflow-hidden bg-gradient-to-r from-[#F59E0B] to-[#EF4444] hover:from-[#E5A208] hover:to-[#DC2626] text-white font-black px-6 py-3 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-orange-500/30">
                                  Join Session
                                  <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
                                </button>
                              </div>
                            </div>
                          </div>
                        <% end %>

                        <%!-- Active Broadcasts --%>
                        <%= for broadcast <- active_broadcasts(@broadcasts) do %>
                          <div class="bg-gradient-to-r from-purple-50/80 to-pink-50/80 backdrop-blur-xl border border-purple-200/50 rounded-2xl p-6 hover:shadow-2xl hover:shadow-purple-500/10 transition-all duration-500 transform hover:scale-[1.02]">
                            <div class="flex items-start justify-between">
                              <div class="flex items-start gap-4 flex-1">
                                <div class="w-16 h-16 bg-gradient-to-br from-[#8B5CF6] to-[#FF0080] rounded-2xl flex items-center justify-center shadow-xl border border-white/20 backdrop-blur-xl">
                                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                                  </svg>
                                </div>
                                <div class="flex-1">
                                  <div class="flex items-center gap-3 mb-3">
                                    <h3 class="font-black text-gray-900 text-xl tracking-tight"><%= broadcast.title || "Live Broadcast" %></h3>
                                    <span class="bg-gradient-to-r from-[#FF0080] to-[#FF4500] text-white px-3 py-1 text-xs rounded-full font-black animate-pulse shadow-lg">LIVE</span>
                                  </div>
                                  <%= if broadcast.description do %>
                                    <p class="text-gray-600 mb-4 leading-relaxed"><%= broadcast.description %></p>
                                  <% end %>
                                  <div class="flex items-center gap-4 text-sm">
                                    <div class="flex items-center gap-2">
                                      <svg class="w-4 h-4 text-[#8B5CF6]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                      </svg>
                                      <span class="font-black text-purple-600"><%= broadcast.participants_count || 0 %> viewers</span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                      </svg>
                                      <span class="text-gray-600 font-semibold">by <%= get_user_name(broadcast.host_id, @users_map) %></span>
                                    </div>
                                  </div>
                                </div>
                              </div>
                              <div class="flex flex-col gap-2">
                                <button phx-click="join_broadcast" phx-value-id={broadcast.id} class="relative overflow-hidden bg-gradient-to-r from-[#8B5CF6] to-[#FF0080] hover:from-[#7C3AED] hover:to-[#E60067] text-white font-black px-6 py-3 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-purple-500/30">
                                    Watch Live
                                    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
                                  </button>
                              </div>
                            </div>
                          </div>
                        <% end %>
                      </div>
                    <% else %>
                      <%!-- No Active Sessions/Broadcasts --%>
                      <div class="text-center py-16">
                        <div class="w-20 h-20 mx-auto bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl flex items-center justify-center mb-6 shadow-lg border border-gray-200/50">
                          <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                          </svg>
                        </div>
                        <h3 class="text-2xl font-black text-gray-900 mb-3 tracking-tight">No live activity right now</h3>
                        <p class="text-gray-600 mb-8 text-lg leading-relaxed">Be the first to start a session or go live!</p>
                        <%= if @can_create_session do %>
                          <div class="flex justify-center gap-4">
                            <button phx-click="show_session_form" class="relative overflow-hidden bg-gradient-to-r from-[#F59E0B] to-[#EF4444] hover:from-[#E5A208] hover:to-[#DC2626] text-white font-black px-8 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-orange-500/30">
                              Start Session
                              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
                            </button>
                            <%= if @can_create_broadcast do %>
                              <button phx-click="show_broadcast_form" class="relative overflow-hidden bg-gradient-to-r from-[#8B5CF6] to-[#FF0080] hover:from-[#7C3AED] hover:to-[#E60067] text-white font-black px-8 py-4 rounded-2xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl hover:shadow-purple-500/30">
                                Go Live
                                <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 hover:opacity-20 transform -skew-x-12 translate-x-full hover:translate-x-[-200%] transition-transform duration-700"></div>
                              </button>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>

                  <% else %>
                    <%!-- Upcoming Events --%>
                    <%= if length(@upcoming_broadcasts) > 0 do %>
                      <div class="space-y-4">
                        <%= for broadcast <- @upcoming_broadcasts do %>
                          <div class="bg-gradient-to-r from-blue-50/80 to-indigo-50/80 backdrop-blur-xl border border-blue-200/50 rounded-2xl p-6 hover:shadow-2xl hover:shadow-blue-500/10 transition-all duration-500 transform hover:scale-[1.02]">
                            <div class="flex items-start justify-between">
                              <div class="flex items-start gap-4 flex-1">
                                <div class="w-16 h-16 bg-gradient-to-br from-[#00D4FF] to-[#8B5CF6] rounded-2xl flex items-center justify-center shadow-xl border border-white/20 backdrop-blur-xl">
                                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <%!-- Channel Template Part 2 - Content & Sidebar --%>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                  </svg>
                                </div>
                                <div class="flex-1">
                                  <h3 class="font-black text-gray-900 text-xl tracking-tight mb-3"><%= broadcast.title || "Scheduled Broadcast" %></h3>
                                  <%= if broadcast.description do %>
                                    <p class="text-gray-600 mb-4 leading-relaxed"><%= broadcast.description %></p>
                                  <% end %>
                                  <div class="flex items-center gap-4 text-sm">
                                    <div class="flex items-center gap-2">
                                      <svg class="w-4 h-4 text-[#00D4FF]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                      </svg>
                                      <span class="text-gray-600 font-semibold"><%= format_date_time(broadcast.scheduled_for, @current_user && Frestyl.Timezone.get_user_timezone(@current_user)) %></span>
                                    </div>
                                    <div class="flex items-center gap-2">
                                      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                      </svg>
