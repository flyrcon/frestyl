<!-- Helper Functions -->
<script>
  // Enhanced relative date function
  function relative_date(date_string) {
    if (!date_string) return "recently";
    
    try {
      const date = new Date(date_string);
      const now = new Date();
      const diffInSeconds = Math.floor((now - date) / 1000);
      
      if (diffInSeconds < 60) return "just now";
      if (diffInSeconds < 3600) return `${Math.floor(diffInSeconds / 60)} minutes ago`;
      if (diffInSeconds < 86400) return `${Math.floor(diffInSeconds / 3600)} hours ago`;
      if (diffInSeconds < 604800) return `${Math.floor(diffInSeconds / 86400)} days ago`;
      if (diffInSeconds < 2629746) return `${Math.floor(diffInSeconds / 604800)} weeks ago`;
      return `${Math.floor(diffInSeconds / 2629746)} months ago`;
    } catch (error) {
      return "recently";
    }
  }

  // Welcome celebration animations
  window.addEventListener('DOMContentLoaded', function() {
    const celebrationModal = document.querySelector('[phx-hook="WelcomeCelebration"]');
    if (celebrationModal) {
      // Add confetti effect
      setTimeout(() => {
        createConfettiEffect(celebrationModal);
      }, 500);
    }
  });

  function createConfettiEffect(container) {
    const colors = ['#fbbf24', '#f59e0b', '#3b82f6', '#8b5cf6', '#ef4444', '#10b981'];
    
    for (let i = 0; i < 50; i++) {
      setTimeout(() => {
        const confetti = document.createElement('div');
        confetti.style.cssText = `
          position: absolute;
          width: 8px;
          height: 8px;
          background: ${colors[Math.floor(Math.random() * colors.length)]};
          border-radius: 50%;
          pointer-events: none;
          z-index: 1000;
          top: 20%;
          left: ${20 + Math.random() * 60}%;
          animation: confettifall 3s ease-out forwards;
        `;
        
        container.appendChild(confetti);
        
        setTimeout(() => confetti.remove(), 3000);
      }, i * 50);
    }
  }

  // Add CSS animation for confetti
  if (!document.querySelector('#confetti-animation')) {
    const style = document.createElement('style');
    style.id = 'confetti-animation';
    style.textContent = `
      @keyframes confettifall {
        0% {
          transform: translateY(0) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translateY(300px) rotate(360deg);
          opacity: 0;
        }
      }
      
      .animate-scale-in {
        animation: scaleIn 0.5s ease-out;
      }
      
      @keyframes scaleIn {
        0% { transform: scale(0.9); opacity: 0; }
        100% { transform: scale(1); opacity: 1; }
      }
    `;
    document.head.appendChild(style);
  }
</script>