<!-- DASHBOARD PART 1: Header & Hero Section -->
<div class="bg-white">
  <.nav active_tab={@active_tab} current_user={@current_user} />
  
  <!-- HERO SECTION WITH BRAND GRADIENT -->
  <div class="relative bg-gradient-to-br from-gray-50 via-white to-purple-50 overflow-hidden">
    <!-- Abstract background shapes -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-20 left-10 w-72 h-72 bg-gradient-to-br from-[#C2185B] to-[#6A1B9A] rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-gradient-to-br from-[#FF6B47] to-[#C2185B] rounded-full blur-3xl"></div>
      <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-gradient-to-br from-[#0891B2] to-[#6A1B9A] rounded-full blur-3xl"></div>
    </div>
    
    <div class="relative px-4 sm:px-6 lg:px-8 xl:px-16 pt-8 pb-4">
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-col lg:flex-row justify-between lg:items-end mb-16">
          <!-- Hero Title -->
          <div class="mb-8 lg:mb-0 max-w-4xl">
            <div class="flex items-center mb-6">
              <div class="w-2 h-16 bg-gradient-to-b from-[#C2185B] to-[#6A1B9A] rounded-full mr-6"></div>
              <div>
                <h1 class="text-5xl lg:text-6xl xl:text-5xl font-black tracking-tight leading-none">
                  <span class="bg-gradient-to-r from-[#C2185B] via-[#6A1B9A] to-[#FF6B47] bg-clip-text text-transparent">
                    <%= get_simple_timezone_greeting(@current_user.full_name) %>
                  </span>
                </h1>
              </div>
            </div>
            <p class="text-gray-600 text-lg font-medium leading-relaxed max-w-3xl">
              Let's see what you come up with...
            </p>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex flex-wrap gap-4">
            <.link
              navigate={~p"/channels/new"}
              class="group relative bg-gradient-to-r from-[#C2185B] to-[#6A1B9A] hover:from-[#A91B56] hover:to-[#5C178B] text-white px-8 py-4 rounded-2xl font-bold text-lg shadow-xl shadow-[#C2185B]/25 hover:shadow-[#C2185B]/40 transform hover:scale-105 transition-all duration-300 overflow-hidden"
            >
              <!-- Button shine effect -->
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 group-hover:opacity-20 transform -skew-x-12 translate-x-full group-hover:translate-x-[-200%] transition-transform duration-700"></div>
              <div class="relative flex items-center">
                <div class="w-6 h-6 mr-3 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </div>
                Create Channel
              </div>
            </.link>
            
            <.link
              navigate={~p"/media/upload"}
              class="group relative bg-gradient-to-r from-[#FF6B47] to-[#0891B2] hover:from-[#E55A3A] hover:to-[#0782A3] text-white px-8 py-4 rounded-2xl font-bold text-lg shadow-xl shadow-[#FF6B47]/25 hover:shadow-[#FF6B47]/40 transform hover:scale-105 transition-all duration-300 overflow-hidden"
            >
              <!-- Button shine effect -->
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 group-hover:opacity-20 transform -skew-x-12 translate-x-full group-hover:translate-x-[-200%] transition-transform duration-700"></div>
              <div class="relative flex items-center">
                <div class="w-6 h-6 mr-3 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                  </svg>
                </div>
                Upload Content
              </div>
            </.link>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- FLOATING STATS SECTION -->
<div class="px-4 sm:px-6 lg:px-8 xl:px-16 -mt-4 mb-16 relative z-10">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6">
      
      <!-- Channels Stat -->
      <div class="group relative">
        <!-- Floating background with subtle animation -->
        <div class="absolute inset-0 bg-gradient-to-br from-[#6A1B9A]/10 to-[#C2185B]/10 rounded-3xl transform rotate-1 group-hover:rotate-2 transition-transform duration-300"></div>
        <div class="relative bg-white rounded-3xl p-8 shadow-xl border border-[#6A1B9A]/20 hover:shadow-2xl hover:shadow-[#6A1B9A]/10 transition-all duration-500 transform hover:-translate-y-3">
          <!-- Visual element -->
          <div class="absolute top-4 right-4 w-12 h-12 bg-gradient-to-br from-[#6A1B9A]/20 to-[#C2185B]/20 rounded-2xl flex items-center justify-center opacity-70">
            <div class="w-6 h-1 bg-[#6A1B9A] rounded-full"></div>
          </div>
          
          <div class="flex items-center justify-between mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-[#6A1B9A] to-[#C2185B] rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
              </svg>
            </div>
            <span class="text-sm font-bold text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full border border-emerald-200">+2 new</span>
          </div>
          <h3 class="text-gray-500 text-sm font-semibold mb-2 uppercase tracking-wide">Channels</h3>
          <div class="flex items-baseline">
            <p class="text-4xl font-black text-gray-900"><%= @stats.channels %></p>
            <span class="ml-2 text-[#6A1B9A] text-sm font-bold">active</span>
          </div>
        </div>
      </div>

      <!-- Collaborators Stat -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-[#C2185B]/10 to-[#FF6B47]/10 rounded-3xl transform -rotate-1 group-hover:-rotate-2 transition-transform duration-300"></div>
        <div class="relative bg-white rounded-3xl p-8 shadow-xl border border-[#C2185B]/20 hover:shadow-2xl hover:shadow-[#C2185B]/10 transition-all duration-500 transform hover:-translate-y-3">
          <!-- Visual element -->
          <div class="absolute top-4 right-4 w-8 h-8 bg-gradient-to-br from-[#C2185B]/20 to-[#FF6B47]/20 rounded-full opacity-70"></div>
          <div class="absolute top-6 right-8 w-4 h-4 bg-gradient-to-br from-[#FF6B47]/30 to-[#C2185B]/30 rounded-full opacity-50"></div>
          
          <div class="flex items-center justify-between mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-[#C2185B] to-[#FF6B47] rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </div>
            <span class="text-sm font-bold text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full border border-emerald-200">+5 this week</span>
          </div>
          <h3 class="text-gray-500 text-sm font-semibold mb-2 uppercase tracking-wide">Collaborators</h3>
          <div class="flex items-baseline">
            <p class="text-4xl font-black text-gray-900"><%= @stats.members %></p>
            <span class="ml-2 text-[#C2185B] text-sm font-bold">online</span>
          </div>
        </div>
      </div>

      <!-- Media Files Stat -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-[#FF6B47]/10 to-[#0891B2]/10 rounded-3xl transform rotate-1 group-hover:rotate-2 transition-transform duration-300"></div>
        <div class="relative bg-white rounded-3xl p-8 shadow-xl border border-[#FF6B47]/20 hover:shadow-2xl hover:shadow-[#FF6B47]/10 transition-all duration-500 transform hover:-translate-y-3">
          <!-- Visual element - media icons -->
          <div class="absolute top-4 right-4 flex space-x-1">
            <div class="w-2 h-6 bg-[#FF6B47]/60 rounded-full"></div>
            <div class="w-2 h-4 bg-[#FF6B47]/70 rounded-full"></div>
            <div class="w-2 h-5 bg-[#FF6B47]/80 rounded-full"></div>
          </div>
          
          <div class="flex items-center justify-between mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-[#FF6B47] to-[#0891B2] rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4v16M17 4v16M3 8h4m10 0h4M3 12h18M3 16h4m10 0h4M4 20h16a1 1 0 001-1V5a1 1 0 00-1-1H4a1 1 0 00-1 1v14a1 1 0 001 1z" />
              </svg>
            </div>
            <span class="text-sm font-bold text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full border border-emerald-200">+12 today</span>
          </div>
          <h3 class="text-gray-500 text-sm font-semibold mb-2 uppercase tracking-wide">Media Files</h3>
          <div class="flex items-baseline">
            <p class="text-4xl font-black text-gray-900"><%= @stats.media_files %></p>
            <span class="ml-2 text-[#FF6B47] text-sm font-bold">files</span>
          </div>
        </div>
      </div>

      <!-- Views Stat -->
      <div class="group relative">
        <div class="absolute inset-0 bg-gradient-to-br from-[#0891B2]/10 to-[#6A1B9A]/10 rounded-3xl transform -rotate-1 group-hover:-rotate-2 transition-transform duration-300"></div>
        <div class="relative bg-white rounded-3xl p-8 shadow-xl border border-[#0891B2]/20 hover:shadow-2xl hover:shadow-[#0891B2]/10 transition-all duration-500 transform hover:-translate-y-3">
          <!-- Visual element - eye/view indicator -->
          <div class="absolute top-4 right-4 w-10 h-6 bg-gradient-to-r from-[#0891B2]/30 to-[#6A1B9A]/30 rounded-full opacity-60 flex items-center justify-center">
            <div class="w-3 h-3 bg-[#0891B2] rounded-full"></div>
          </div>
          
          <div class="flex items-center justify-between mb-6">
            <div class="w-16 h-16 bg-gradient-to-br from-[#0891B2] to-[#6A1B9A] rounded-2xl flex items-center justify-center shadow-lg transform group-hover:scale-110 transition-transform duration-300">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
            </div>
            <span class="text-sm font-bold text-emerald-600 bg-emerald-50 px-3 py-1 rounded-full border border-emerald-200">+28% â†‘</span>
          </div>
          <h3 class="text-gray-500 text-sm font-semibold mb-2 uppercase tracking-wide">Total Views</h3>
          <div class="flex items-baseline">
            <p class="text-4xl font-black text-gray-900"><%= @stats.total_views %></p>
            <span class="ml-2 text-[#0891B2] text-sm font-bold">views</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- QUICK ACTIONS SECTION -->
<div class="px-4 sm:px-6 lg:px-8 xl:px-16 mb-20">
  <div class="max-w-7xl mx-auto">
    <div class="bg-gradient-to-br from-gray-50 to-purple-50/30 rounded-3xl p-8 lg:p-12 border border-gray-100/50 shadow-sm">
      <div class="flex items-center mb-8">
        <div class="w-1 h-12 bg-gradient-to-b from-[#C2185B] to-[#6A1B9A] rounded-full mr-6"></div>
        <h2 class="text-3xl font-black text-gray-900">
          Quick Actions
        </h2>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        
        <!-- Events Action -->
        <.link navigate={~p"/events/new"} class="group relative overflow-hidden">
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg border border-gray-100 hover:border-[#6A1B9A]/30 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <!-- Background pattern -->
            <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-[#6A1B9A]/10 to-[#C2185B]/10 rounded-full opacity-20 transform translate-x-6 -translate-y-6"></div>
            
            <div class="relative text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-[#6A1B9A] to-[#C2185B] rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-[#6A1B9A]/30 transition-shadow duration-300">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-[#6A1B9A] transition-colors">Events</span>
            </div>
          </div>
        </.link>
        
        <!-- Invite Action -->
        <.link navigate={~p"/invite"} class="group relative overflow-hidden">
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg border border-gray-100 hover:border-[#C2185B]/30 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <!-- Background pattern -->
            <div class="absolute top-0 right-0 w-16 h-16 bg-gradient-to-br from-[#C2185B]/10 to-[#FF6B47]/10 rounded-full opacity-30 transform translate-x-4 -translate-y-4"></div>
            
            <div class="relative text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-[#C2185B] to-[#FF6B47] rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-[#C2185B]/30 transition-shadow duration-300">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
              </div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-[#C2185B] transition-colors">Invite</span>
            </div>
          </div>
        </.link>
        
        <!-- Chat Action -->
        <.link navigate={~p"/chat"} class="group relative overflow-hidden">
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg border border-gray-100 hover:border-[#0891B2]/30 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <!-- Background pattern -->
            <div class="absolute top-2 right-2 w-3 h-3 bg-[#0891B2]/40 rounded-full"></div>
            <div class="absolute top-4 right-6 w-2 h-2 bg-[#0891B2]/50 rounded-full"></div>
            
            <div class="relative text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-[#0891B2] to-[#6A1B9A] rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-[#0891B2]/30 transition-shadow duration-300">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-[#0891B2] transition-colors">Chat</span>
            </div>
          </div>
        </.link>
        
        <!-- Settings Action -->
        <.link navigate={~p"/settings"} class="group relative overflow-hidden">
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg border border-gray-100 hover:border-gray-300 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <!-- Background pattern - gear elements -->
            <div class="absolute top-2 right-3 w-4 h-4 border-2 border-gray-300 rounded-full opacity-30"></div>
            <div class="absolute top-1 right-2 w-2 h-2 bg-gray-300 rounded-full opacity-40"></div>
            
            <div class="relative text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-gray-500 to-gray-600 rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-gray-500/30 transition-shadow duration-300">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-gray-600 transition-colors">Settings</span>
            </div>
          </div>
        </.link>
        
        <!-- Portfolio Action -->
        <.link navigate={~p"/portfolios"} class="group relative overflow-hidden">
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg border border-gray-100 hover:border-[#FF6B47]/30 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <!-- Background pattern - portfolio grid -->
            <div class="absolute top-2 right-2 grid grid-cols-2 gap-1 opacity-30">
              <div class="w-2 h-2 bg-[#FF6B47]/60 rounded-sm"></div>
              <div class="w-2 h-2 bg-[#FF6B47]/70 rounded-sm"></div>
              <div class="w-2 h-1 bg-[#FF6B47]/50 rounded-sm"></div>
              <div class="w-2 h-1 bg-[#FF6B47]/60 rounded-sm"></div>
            </div>
            
            <div class="relative text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-[#FF6B47] to-[#C2185B] rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-[#FF6B47]/30 transition-shadow duration-300">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-[#FF6B47] transition-colors">Portfolio</span>
            </div>
          </div>
        </.link>
        
        <!-- Browse Action -->
        <.link navigate={~p"/browse"} class="group relative overflow-hidden">
          <div class="bg-white rounded-2xl p-6 shadow-sm hover:shadow-lg border border-gray-100 hover:border-[#0891B2]/30 transition-all duration-300 transform hover:scale-105 hover:-translate-y-1">
            <!-- Background pattern - discovery elements -->
            <div class="absolute top-1 right-4 w-6 h-1 bg-[#0891B2]/40 rounded-full"></div>
            <div class="absolute top-3 right-2 w-3 h-3 bg-[#0891B2]/30 rounded-full"></div>
            
            <div class="relative text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-gradient-to-br from-[#0891B2] to-[#FF6B47] rounded-2xl flex items-center justify-center shadow-lg group-hover:shadow-[#0891B2]/30 transition-shadow duration-300">
                <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </div>
              <span class="text-sm font-bold text-gray-700 group-hover:text-[#0891B2] transition-colors">Browse</span>
            </div>
          </div>
        </.link>
      </div>
    </div>
  </div>
</div>

<!-- CHANNELS SECTION WITH VISUAL DUMMY DATA -->
<div class="px-4 sm:px-6 lg:px-8 xl:px-16 mb-20">
  <div class="max-w-7xl mx-auto">
    <div class="bg-white rounded-3xl shadow-xl border border-gray-100/50 overflow-hidden">
      <div class="p-8 lg:p-12">
        <div class="flex justify-between items-center mb-8">
          <div class="flex items-center">
            <div class="w-1 h-12 bg-gradient-to-b from-[#C2185B] to-[#6A1B9A] rounded-full mr-6"></div>
            <h2 class="text-3xl font-black text-gray-900">My Channels</h2>
          </div>
          <.link navigate={~p"/channels"} class="text-[#C2185B] hover:text-[#6A1B9A] font-bold text-lg transition-colors flex items-center group">
            View All 
            <svg class="ml-2 h-5 w-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
