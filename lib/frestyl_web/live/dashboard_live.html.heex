<script>
  // Survey questions
  const surveyQuestions = [
    {
      type: 'multiple',
      question: "What's your preferred creative medium?",
      options: [
        "Digital Art & Design",
        "Music & Audio", 
        "Video & Film",
        "Writing & Literature"
      ]
    },
    {
      type: 'text',
      question: "What's the most unconventional tool you've used for creative work?"
    },
    {
      type: 'multiple',
      question: "What time of day are you most creative?",
      options: [
        "Early morning (5-9 AM)",
        "Late morning (9 AM-12 PM)",
        "Afternoon (12-6 PM)",
        "Evening/Night (6 PM+)"
      ]
    }
  ];

  let currentSurveyIndex = 0;
  let dailyStreak = 7;

  // Search functionality
  function setupSearch() {
    const toggle = document.getElementById('search-toggle');
    const input = document.getElementById('search-input');
    
    if (toggle && input) {
      toggle.addEventListener('click', function() {
        input.classList.toggle('hidden');
        if (!input.classList.contains('hidden')) {
          input.focus();
        }
      });

      document.addEventListener('click', function(event) {
        if (!toggle.contains(event.target) && !input.contains(event.target)) {
          input.classList.add('hidden');
        }
      });
    }
  }

  // Survey functionality
  function loadSurveyQuestion() {
    const currentSurvey = surveyQuestions[currentSurveyIndex];
    const questionEl = document.getElementById('survey-question');
    const optionsEl = document.getElementById('survey-options');
    
    if (questionEl) {
      questionEl.textContent = currentSurvey.question;
    }

    if (currentSurvey.type === 'multiple' && optionsEl) {
      optionsEl.classList.remove('hidden');
      const buttons = optionsEl.querySelectorAll('.survey-option');
      buttons.forEach((button, index) => {
        if (currentSurvey.options[index]) {
          button.textContent = currentSurvey.options[index];
          button.style.display = 'block';
        } else {
          button.style.display = 'none';
        }
      });
    }
  }

  // Handle survey submission
  function handleSurveySubmit() {
    const contentEl = document.getElementById('survey-content');
    const completedEl = document.getElementById('survey-completed');
    
    if (contentEl && completedEl) {
      contentEl.classList.add('hidden');
      completedEl.classList.remove('hidden');
      
      dailyStreak++;
      updateProgressBar();
      
      setTimeout(() => {
        contentEl.classList.remove('hidden');
        completedEl.classList.add('hidden');
        rotateSurvey();
      }, 3000);
    }
  }

  // Rotate to next survey
  function rotateSurvey() {
    currentSurveyIndex = (currentSurveyIndex + 1) % surveyQuestions.length;
    loadSurveyQuestion();
  }

  // Update progress bar
  function updateProgressBar() {
    const progressBar = document.getElementById('progress-bar');
    const streakEl = document.getElementById('streak-counter');
    
    if (progressBar) {
      const progress = Math.min((dailyStreak * 10), 100);
      progressBar.style.width = progress + '%';
    }
    
    if (streakEl) {
      streakEl.textContent = dailyStreak + ' days';
    }
  }

  // Mobile sidebar functionality
  function setupMobileSidebar() {
    const button = document.getElementById('mobile-menu-button');
    const sidebar = document.getElementById('mobile-sidebar');
    const overlay = document.getElementById('mobile-overlay');
    
    if (button && sidebar && overlay) {
      button.addEventListener('click', function() {
        sidebar.classList.remove('-translate-x-full');
        overlay.classList.remove('hidden');
      });

      overlay.addEventListener('click', function() {
        sidebar.classList.add('-translate-x-full');
        overlay.classList.add('hidden');
      });
    }
  }

  // User menu functionality
  function setupUserMenu() {
    const button = document.getElementById('user-menu-button');
    const menu = document.getElementById('user-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        menu.classList.toggle('hidden');
      });

      document.addEventListener('click', function(event) {
        if (!button.contains(event.target) && !menu.contains(event.target)) {
          menu.classList.add('hidden');
        }
      });
    }
  }

  // Initialize everything
  document.addEventListener('DOMContentLoaded', function() {
    setupMobileSidebar();
    setupUserMenu();
    setupSearch();
    loadSurveyQuestion();
    updateProgressBar();
    
    const submitButton = document.getElementById('survey-submit');
    if (submitButton) {
      submitButton.addEventListener('click', handleSurveySubmit);
    }

    const surveyOptions = document.querySelectorAll('.survey-option');
    surveyOptions.forEach(option => {
      option.addEventListener('click', function() {
        surveyOptions.forEach(opt => {
          opt.classList.remove('bg-blue-500', 'text-white');
          opt.classList.add('bg-gray-50');
        });
        this.classList.remove('bg-gray-50');
        this.classList.add('bg-blue-500', 'text-white');
      });
    });
    
    // Auto-rotate survey every 2 minutes
    setInterval(rotateSurvey, 120000);
  });
</script>