<!-- JavaScript for Question Rotation and Interactions -->
<script>
  // Question rotation functionality
  document.addEventListener('DOMContentLoaded', function() {
    const questionSets = document.querySelectorAll('.question-set');
    let currentSet = 0;
    
    function rotateQuestions() {
      // Hide current question set
      if (questionSets[currentSet]) {
        questionSets[currentSet].classList.add('hidden');
      }
      
      // Move to next set
      currentSet = (currentSet + 1) % questionSets.length;
      
      // Show next question set
      setTimeout(() => {
        if (questionSets[currentSet]) {
          questionSets[currentSet].classList.remove('hidden');
        }
      }, 500);
    }
    
    // Rotate questions every 30 seconds
    if (questionSets.length > 1) {
      setInterval(rotateQuestions, 30000);
    }
    
    // Add floating animation to stats cards
    const statsCards = document.querySelectorAll('.stats-card');
    statsCards.forEach((card, index) => {
      card.classList.add('floating-card');
      card.style.animationDelay = `${index * 0.5}s`;
    });
    
    // Add intersection observer for reveal animations
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('reveal-up');
        }
      });
    }, {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    });
    
    // Observe elements for reveal animation
    const revealElements = document.querySelectorAll('.observe-reveal');
    revealElements.forEach(el => observer.observe(el));
    
    // Add haptic feedback for mobile
    const interactiveElements = document.querySelectorAll('.haptic-feedback');
    interactiveElements.forEach(element => {
      element.addEventListener('touchstart', function() {
        if (navigator.vibrate) {
          navigator.vibrate(50);
        }
      });
    });
    
    // Smooth scroll behavior for navigation
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
    
    // Add loading states for buttons
    const actionButtons = document.querySelectorAll('.action-btn');
    actionButtons.forEach(button => {
      button.addEventListener('click', function() {
        const originalText = this.innerHTML;
        this.innerHTML = '<svg class="animate-spin h-4 w-4 mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
        this.disabled = true;
        
        // Re-enable after 2 seconds (adjust based on your needs)
        setTimeout(() => {
          this.innerHTML = originalText;
          this.disabled = false;
        }, 2000);
      });
    });
    
    // Add parallax effect to background elements
    const parallaxElements = document.querySelectorAll('.parallax');
    
    function updateParallax() {
      const scrolled = window.pageYOffset;
      const rate = scrolled * -0.5;
      
      parallaxElements.forEach(element => {
        element.style.transform = `translateY(${rate}px)`;
      });
    }
    
    // Throttle parallax updates
    let ticking = false;
    function requestTick() {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
        setTimeout(() => ticking = false, 16);
      }
    }
    
    window.addEventListener('scroll', requestTick);
    
    // Add keyboard navigation support
    document.addEventListener('keydown', function(e) {
      // Tab navigation enhancement
      if (e.key === 'Tab') {
        document.body.classList.add('keyboard-navigation');
      }
      
      // Escape key to close modals/dropdowns
      if (e.key === 'Escape') {
        const openDropdowns = document.querySelectorAll('.dropdown-open');
        openDropdowns.forEach(dropdown => {
          dropdown.classList.remove('dropdown-open');
        });
      }
    });
    
    // Remove keyboard navigation class on mouse use
    document.addEventListener('mousedown', function() {
      document.body.classList.remove('keyboard-navigation');
    });
    
    // Add performance monitoring
    if ('performance' in window) {
      window.addEventListener('load', function() {
        setTimeout(() => {
          const perfData = performance.getEntriesByType('navigation')[0];
          console.log('Page load time:', perfData.loadEventEnd - perfData.loadEventStart, 'ms');
        }, 0);
      });
    }
    
    // Add error boundary for JavaScript errors
    window.addEventListener('error', function(e) {
      console.error('Dashboard Error:', e.error);
      // Could send to error tracking service here
    });
    
    // Add network status indicator
    function updateNetworkStatus() {
      const networkStatus = navigator.onLine ? 'online' : 'offline';
      document.body.setAttribute('data-network', networkStatus);
      
      if (!navigator.onLine) {
        // Show offline indicator
        const offlineIndicator = document.createElement('div');
        offlineIndicator.className = 'fixed top-4 right-4 bg-red-500 text-white px-4 py-2 rounded-lg shadow-lg z-50 transition-all duration-300';
        offlineIndicator.textContent = 'You are offline';
        offlineIndicator.id = 'offline-indicator';
        
        if (!document.getElementById('offline-indicator')) {
          document.body.appendChild(offlineIndicator);
        }
      } else {
        // Remove offline indicator
        const indicator = document.getElementById('offline-indicator');
        if (indicator) {
          indicator.remove();
        }
      }
    }
    
    window.addEventListener('online', updateNetworkStatus);
    window.addEventListener('offline', updateNetworkStatus);
    updateNetworkStatus(); // Initial check
    
    // Add touch gesture support for mobile
    let touchStartX = 0;
    let touchStartY = 0;
    
    document.addEventListener('touchstart', function(e) {
      touchStartX = e.touches[0].clientX;
      touchStartY = e.touches[0].clientY;
    });
    
    document.addEventListener('touchend', function(e) {
      const touchEndX = e.changedTouches[0].clientX;
      const touchEndY = e.changedTouches[0].clientY;
      
      const deltaX = touchEndX - touchStartX;
      const deltaY = touchEndY - touchStartY;
      
      // Swipe detection (adjust threshold as needed)
      if (Math.abs(deltaX) > 50 && Math.abs(deltaY) < 100) {
        if (deltaX > 0) {
          // Swipe right
          document.dispatchEvent(new CustomEvent('swipeRight'));
        } else {
          // Swipe left
          document.dispatchEvent(new CustomEvent('swipeLeft'));
        }
      }
    });
    
    // Add resize handler for responsive adjustments
    function handleResize() {
      // Update any size-dependent calculations
      const vh = window.innerHeight * 0.01;
      document.documentElement.style.setProperty('--vh', `${vh}px`);
    }
    
    window.addEventListener('resize', handleResize);
    handleResize(); // Initial call
    
    // Add focus trap for modals
    function trapFocus(element) {
      const focusableElements = element.querySelectorAll(
        'button, [href], input, select, textarea, [tabindex]:not([tabindex="-1"])'
      );
      
      const firstFocusableElement = focusableElements[0];
      const lastFocusableElement = focusableElements[focusableElements.length - 1];
      
      element.addEventListener('keydown', function(e) {
        if (e.key === 'Tab') {
          if (e.shiftKey) {
            if (document.activeElement === firstFocusableElement) {
              lastFocusableElement.focus();
              e.preventDefault();
            }
          } else {
            if (document.activeElement === lastFocusableElement) {
              firstFocusableElement.focus();
              e.preventDefault();
            }
          }
        }
      });
    }
    
    // Initialize focus traps for any existing modals
    const modals = document.querySelectorAll('.modal');
    modals.forEach(modal => trapFocus(modal));
  });
  
  // Phoenix LiveView specific enhancements
  if (window.liveSocket) {
    // Add custom hooks for enhanced interactivity
    window.liveSocket.hooks = {
      ...window.liveSocket.hooks,
      
      // Stats animation hook
      StatsAnimation: {
        mounted() {
          this.el.classList.add('reveal-up');
        },
        updated() {
          this.el.classList.add('pulse-soft');
          setTimeout(() => {
            this.el.classList.remove('pulse-soft');
          }, 1000);
        }
      },
      
      // Card hover enhancement
      CardHover: {
        mounted() {
          this.el.addEventListener('mouseenter', () => {
            this.el.classList.add('hover-glow');
          });
          
          this.el.addEventListener('mouseleave', () => {
            this.el.classList.remove('hover-glow');
          });
        }
      },
      
      // Question rotation
      QuestionRotation: {
        mounted() {
          this.rotateQuestions();
          this.interval = setInterval(() => this.rotateQuestions(), 30000);
        },
        destroyed() {
          if (this.interval) clearInterval(this.interval);
        },
        rotateQuestions() {
          const questions = this.el.querySelectorAll('.question-set');
          if (questions.length <= 1) return;
          
          const current = this.el.querySelector('.question-set:not(.hidden)');
          const currentIndex = Array.from(questions).indexOf(current);
          const nextIndex = (currentIndex + 1) % questions.length;
          
          if (current) current.classList.add('hidden');
          setTimeout(() => {
            questions[nextIndex].classList.remove('hidden');
          }, 500);
        }
      }
    };
  }
</script>)

